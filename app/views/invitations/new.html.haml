%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for @invitation, class: "Invite Friend" do |f|
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            = f.label :recipiant_name, "Friend's Name"
            = f.text_field :recipiant_name
          .form-group
            = f.label :recipiant_email, "Friend's Email"
            = f.text_field :recipiant_email
          .form-group
            = f.label :message, "Invitation Message"
            = f.text_area :message, class: "span4", rows: 6, placeholder: "Please join me in MyFlix!"
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
